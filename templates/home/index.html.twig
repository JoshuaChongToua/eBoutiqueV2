{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .container {
            display: flex;
            margin-top: 20px;
            flex-direction: column;
            gap: 30px;
            align-items: center;
        }

        .homepage-title p {
            font-size: 80px;
            color: #00d4a8;
            text-shadow: 0 0 10px #00d4a8, 0 0 20px #00d4a8;
        }

        .homepage-button a {
            text-decoration: none;
        }

        .three-block {
            display: flex;
            justify-content: space-between;
            position: relative;
            height: 100%;
            gap: 15px;
        }

        .plage, .right-block {
            position: relative; /* Permet de positionner le texte par-dessus l'image */
            flex: 1;
            overflow: hidden;
        }

        .right-block {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            gap: 15px;
        }

        .ville, .montagne {
            position: relative;
            flex: 1;
            overflow: hidden;
        }

        .img-three-block {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 10px;
            overflow: hidden;
            transition: all .3s ease-in-out;
        }


        .plage:hover .img-three-block,
        .ville:hover .img-three-block,
        .montagne:hover .img-three-block {
            transform: scale(1.1);
            filter: brightness(0.7);
        }

        .three-block p {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 24px;
            font-weight: bold;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
            transition: transform 0.4s ease-in-out;
        }



        .three-block p {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 24px;
            font-weight: bold;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
        }


        .content__title a {
            display: inline; /* EmpÃªche le lien de prendre toute la largeur */
            color: inherit;
        }

        .titre {
            display: flex;
            justify-content: center;
            font-size: 50px;
            padding-top: 30px;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
            font-weight: bold;
        }



    </style>

    <div class="hero">
        <div class="hero__fullsize"></div>
        <div class="hero__swiper swiper">
            <div class="swiper-wrapper">
                {% for produit in produits %}
                <div class="swiper-slide">
                    <div class="content content--slide">
                        <img class="content__image" src="{{ produit.image[0] }}" alt="">
                        <div class="content__text">
                            <h2 class="content__title"><a href="{{ path('app_produit_show', {id: produit.id}) }}">{{ produit.nom }}</a></h2>
                            <p class="content__desc">{{ produit.description }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="swiper-button-next">
                <p>Suivante</p>
            </div>
        </div>
    </div>

    <p class="titre">Trouvez Votre Meilleur Destination</p>

    <div class="container">
        <div class="three-block">
            <div class="plage">
                <a href="{{ path('app_get_continent_produit' , {continent: 'plage'}) }}">
                    <img class="img-three-block" src="{{ asset('images/plage.jpg') }}" alt="Plage">
                    <p>Plages</p>
                </a>
            </div>

            <div class="right-block">
                <div class="ville">
                    <a href="{{ path('app_get_continent_produit' , {continent: 'ville'}) }}">
                        <img class="img-three-block" src="{{ asset('images/ville.jpg') }}" alt="Ville">
                        <p>Villes</p>
                    </a>
                </div>
                <div class="montagne">
                    <a href="{{ path('app_get_continent_produit' , {continent: 'montagne'}) }}">
                        <img class="img-three-block" src="{{ asset('images/montagne.jpg') }}" alt="Montagne">
                        <p>Montagnes</p>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="{{ asset('js/navbar.js') }}" defer></script>


{% endblock %}

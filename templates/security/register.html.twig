{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container d-flex align-items-center justify-content-center pt-1 mt-5">
        <div class="card shadow-lg p-4 rounded-4" style="max-width: 500px; width: 100%;">
            <div class="card-body">
                <h2 class="text-center mb-4 text-primary">Inscription</h2>

                {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="mb-3">
                    {{ form_label(registrationForm.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'autocomplete': 'email'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control', 'autocomplete': 'new-password'}}) }}
                    {{ form_errors(registrationForm.password) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.nom) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.prenom) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.adresse, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.adresse) }}
                </div>

                <div class="d-grid mt-4">
                    <button class="btn btn-success btn-lg" type="submit">
                        Créer un compte
                    </button>
                </div>

                <div class="card-footer text-end bg-white rounded-bottom-4">
                    <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">← Déjà inscrit ? Connexion</a>
                </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>


{% endblock %}
